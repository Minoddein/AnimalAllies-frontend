{
    "name": "animalallies-frontend",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "lint": "bun run --bun eslint --fix .",
        "lint:styles": "bun run --bun stylelint **/*.css --fix --ignore-path .gitignore",
        "format": "bun run --bun prettier . --write --ignore-path .gitignore",
        "dev": "bun run --bun --inspect=0.0.0.0 next dev --turbopack",
        "build": "bun run --bun next build",
        "start": "bun run --bun next start",
        "prepare": "bun run --bun husky"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(json|md|yaml|yml|Dockerfile)": [
            "bun run --bun prettier --write --ignore-path .gitignore"
        ],
        "*.(js|jsx|mjs|ts|tsx)": [
            "bun run --bun prettier --write --ignore-path .gitignore",
            "bun run --bun eslint --fix"
        ],
        "*.css": [
            "bun run --bun stylelint --fix --ignore-path .gitignore"
        ]
    },
    "dependencies": {
        "@hello-pangea/dnd": "^18.0.1",
        "lucide-react": "^0.513.0",
        "next": "15.3.2",
        "react": "^19.0.0",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.6",
        "@eslint/eslintrc": "^3",
        "@eslint/js": "^9.20.0",
        "@heroui/react": "^2.8.0-beta.4",
        "@hookform/resolvers": "^5.0.1",
        "@iconify/react": "^5.2.1",
        "@tailwindcss/postcss": "^4",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/node": "^22.15.18",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "axios": "^1.9.0",
        "date-fns": "^4.1.0",
        "dotenv": "^16.5.0",
        "eslint": "^9.26.0",
        "eslint-config-next": "15.2.4",
        "eslint-config-prettier": "^10.1.1",
        "framer-motion": "^12.10.1",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.0",
        "next-themes": "^0.4.4",
        "postcss": "^8",
        "prettier": "^3.5.3",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "react-hook-form": "^7.55.0",
        "stylelint": "^16.21.0",
        "stylelint-config-recommended": "^16.0.0",
        "stylelint-config-tailwindcss": "^1.0.0",
        "swr": "^2.3.3",
        "tailwind-merge": "^3.0.2",
        "tailwindcss": "^4.1.6",
        "tailwindcss-animate": "^1.0.7",
        "tsx": "^4.19.3",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1",
        "zod": "^3.24.2"
    }
}
